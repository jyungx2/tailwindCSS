{
  "scripts": {
    "start": "run-p watch serve",
    "dev": "tailwindcss -i ./src/styles/input.css -o ./src/styles/main.css",
    "watch": "npm run dev -- --watch",
    "serve": "live-server --open=/src/ --port=8090 --host=localhost",
    "remove": "rm -rf ./src/styles/main.css",
    "build": "postcss ./src/styles/main.css -o ./src/styles/main.css -m"
  },
  "dependencies": {
    "pnpm": "^9.9.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.5",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.10"
  }
}
